require 'json'

package = JSON.parse(File.read(File.join(__dir__, 'package.json')))

Pod::Spec.new do |s|
  s.name         = 'RNCmbSdk'
  s.version      = package['version']
  s.summary      = package['description']
  s.license      = package['license']

  s.authors      = package['author']
  s.homepage     = package['homepage']
  s.platform     = :ios, "9.0"

  s.source       = { :git => "https://github.com/Cognex-ID/cmbsdk-react.git", :tag => package['version'] }
  s.source_files  = 'ios/*.{h,m}'
  s.public_header_files = 'ios/*.h'
  s.vendored_frameworks = 'ios/SDK/cmbsdk-ios-binary/framework/cmbSDK/device_simulator/cmbSDK.xcframework', 'ios/SDK/cmbsdk-crossplatform-ios-binary/CMBCrossPlatform.xcframework'
  
  s.dependency 'React'
end